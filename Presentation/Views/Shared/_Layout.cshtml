<!DOCTYPE html>
<html lang="en">
@{
    bool footer_fixed = false;
    bool.TryParse(ViewData["Footer-fixed"].ToString(), out footer_fixed);
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
      <link rel="icon" type="image/x-icon" href="~/favicon.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Presentation.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav>
            <a href="@Url.Action("Index", "Home")" class="logo">
                <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-layers-half" viewBox="0 0 16 16">
                    <path d="M8.235 1.559a.5.5 0 0 0-.47 0l-7.5 4a.5.5 0 0 0 0 .882L3.188 8 .264 9.559a.5.5 0 0 0 0 .882l7.5 4a.5.5 0 0 0 .47 0l7.5-4a.5.5 0 0 0 0-.882L12.813 8l2.922-1.559a.5.5 0 0 0 0-.882zM8 9.433 1.562 6 8 2.567 14.438 6z" />
                </svg>
            </a>
            <a href="@Url.Action("Index", "Home")" class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Home" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">Home</a>
            <a href="@Url.Action("Index", "Store")" class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Store" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">Docs</a>
            <a href="@Url.Action("Index", "Store")" class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Store" && ViewContext.RouteData.Values["Action"].ToString() == "" ? "active" : "")">Playground</a>
            <a href="https://github.com/dev372k/Free-API-Store" target="_blank">Github</a>
            <a href="#">Buy me a coffee</a>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

@*     <footer class="border-top footer text-muted @(footer_fixed ? "fixed-bottom": "")">
        <div class="container text-center">
            &copy; 2024 - Free API Store
        </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
